/* Global Vars & Reset */
:root {
    --bg-color: #050507;
    --card-bg: rgba(255, 255, 255, 0.03);
    --card-border: rgba(255, 255, 255, 0.08);
    --text-primary: #f8fafc;
    --text-secondary: #94a3b8;
    --accent: #06b6d4;
    /* Cyan-500 */
    --accent-glow: rgba(6, 182, 212, 0.25);
    --gradient-text: linear-gradient(135deg, #22d3ee 0%, #818cf8 50%, #c084fc 100%);
    --gradient-bg: radial-gradient(circle at 50% 0%, rgba(34, 211, 238, 0.15), transparent 60%);
    --font-heading: 'Outfit', sans-serif;
    --font-body: 'Inter', sans-serif;
    --transition: cubic-bezier(0.4, 0, 0.2, 1) 0.4s;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    scroll-behavior: smooth;
}

body {
    background-color: var(--bg-color);
    background-image: var(--gradient-bg);
    background-attachment: fixed;
    color: var(--text-primary);
    font-family: var(--font-body);
    line-height: 1.7;
    overflow-x: hidden;
    font-weight: 300;
}

h1,
h2,
h3,
h4 {
    font-family: var(--font-heading);
    font-weight: 700;
    letter-spacing: -0.02em;
    color: #fff;
}

a {
    text-decoration: none;
    color: inherit;
    transition: var(--transition);
}

ul {
    list-style: none;
}

section {
    padding: 120px 20px;
    max-width: 1200px;
    margin: 0 auto;
}

/* Animations */
.reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 1s ease-out;
}

.reveal.active {
    opacity: 1;
    transform: translateY(0);
}

/* Navbar */
nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25px 50px;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    background: rgba(5, 5, 7, 0.7);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--card-border);
    transition: padding 0.3s ease;
}

nav.scrolled {
    padding: 15px 50px;
    background: rgba(5, 5, 7, 0.9);
}

.logo {
    font-size: 1.5rem;
    font-weight: 800;
    background: var(--gradient-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -0.05em;
}

.nav-links {
    display: flex;
    gap: 40px;
}

.nav-links a {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text-secondary);
    position: relative;
}

.nav-links a:hover {
    color: #fff;
}

.nav-links a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent);
    transition: var(--transition);
}

.nav-links a:hover::after {
    width: 100%;
}

/* Hero Section */
.hero {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 0 10%;
    position: relative;
    /* Clean background, relies on body gradient */
}

.hero h2 {
    font-size: 1.25rem;
    background: var(--gradient-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 15px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

.hero h1 {
    font-size: 5.5rem;
    line-height: 1;
    margin-bottom: 25px;
}

.hero h1 span {
    font-size: 4rem;
    color: var(--text-secondary);
    display: block;
    margin-top: 10px;
    font-weight: 500;
}

/* Typewriter Cursor */
.typewriter-text {
    border-right: 3px solid var(--accent);
    padding-right: 5px;
    animation: blink 0.75s step-end infinite;
}

@keyframes blink {

    from,
    to {
        border-color: transparent
    }

    50% {
        border-color: var(--accent)
    }
}


.hero p {
    font-size: 1.15rem;
    color: var(--text-secondary);
    max-width: 550px;
    margin-bottom: 50px;
    font-weight: 400;
}

.btn {
    padding: 16px 40px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--card-border);
    color: #fff;
    font-weight: 600;
    border-radius: 5px;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    z-index: 1;
    backdrop-filter: blur(5px);
    font-size: 1rem;
    letter-spacing: 0.05em;
    transition: var(--transition);
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: var(--gradient-text);
    z-index: -1;
    transition: var(--transition);
    opacity: 0.8;
}

.btn:hover::before {
    width: 100%;
}

.btn:hover {
    border-color: transparent;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    box-shadow: 0 10px 30px -10px var(--accent-glow);
}

/* About Image */
.about-image {
    display: flex;
    justify-content: center;
    align-items: center;
}

.about-image img {
    width: 350px;
    /* Increased size */
    height: 350px;
    object-fit: contain;
    /* Since it's a cutout/sticker style */
    filter: drop-shadow(0 0 15px var(--accent-glow));
    transition: var(--transition);
}

.about-image img:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 0 25px var(--accent));
}

/* Skills Cards */
.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 30px;
    margin-top: 60px;
}

.skill-card {
    background: var(--card-bg);
    padding: 30px;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    text-align: center;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.skill-card::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, var(--accent-glow) 0%, transparent 60%);
    transform: translate(-50%, -50%) scale(0);
    transition: transform 0.6s ease;
    opacity: 0;
}

.skill-card:hover::after {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0.3;
}

.skill-card:hover {
    transform: translateY(-10px);
    border-color: rgba(6, 182, 212, 0.3);
    box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.5);
}

.skill-card i {
    z-index: 2;
    position: relative;
    transition: var(--transition);
}

.skill-card:hover i {
    transform: scale(1.1);
    color: #fff !important;
}

.skill-card h3 {
    font-size: 1.1rem;
    margin-top: 15px;
    z-index: 2;
    position: relative;
    font-weight: 500;
}

/* Experience Timeline */
.timeline {
    position: relative;
    max-width: 800px;
    margin: 60px auto 0;
    border-left: 2px solid rgba(255, 255, 255, 0.05);
    padding-left: 40px;
}

.timeline-item {
    position: relative;
    margin-bottom: 60px;
}

.timeline-item:last-child {
    margin-bottom: 0;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: -48px;
    top: 0;
    width: 14px;
    height: 14px;
    background: var(--bg-color);
    border: 2px solid var(--accent);
    border-radius: 50%;
    box-shadow: 0 0 15px var(--accent-glow);
    transition: var(--transition);
}

.timeline-item:hover::before {
    background: var(--accent);
    transform: scale(1.2);
}

.timeline-content {
    background: var(--card-bg);
    padding: 35px;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    transition: var(--transition);
}

.timeline-item:hover .timeline-content {
    border-color: rgba(6, 182, 212, 0.3);
    transform: translateX(10px);
}

.timeline-date {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
    display: inline-block;
}

.timeline-title {
    font-size: 1.5rem;
    margin-bottom: 5px;
    color: #fff;
}

.timeline-company {
    font-weight: 400;
    margin-bottom: 20px;
    color: #cbd5e1;
    font-size: 1.1rem;
}

.timeline p {
    color: var(--text-secondary);
    font-size: 1rem;
}

/* Contact */
.contact-container {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    background: linear-gradient(180deg, var(--card-bg) 0%, transparent 100%);
    padding: 60px;
    border-radius: 20px;
    border: 1px solid var(--card-border);
    backdrop-filter: blur(10px);
}

.contact-links {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-top: 50px;
}

.social-link {
    font-size: 1.8rem;
    color: var(--text-secondary);
    transition: var(--transition);
    padding: 15px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 50%;
}

.social-link:hover {
    color: #fff;
    background: var(--accent);
    transform: translateY(-5px);
    box-shadow: 0 10px 20px var(--accent-glow);
}

/* Responsive */
@media (max-width: 768px) {
    .hero h1 {
        font-size: 3rem;
    }

    .hero h1 span {
        font-size: 2rem;
    }

    .nav-links {
        display: none;
    }

    nav {
        padding: 20px;
    }

    section {
        padding: 80px 20px;
    }

    .timeline {
        padding-left: 20px;
        border-left: none;
    }

    .timeline-item::before {
        display: none;
    }

    .timeline-content {
        transform: none !important;
    }
}